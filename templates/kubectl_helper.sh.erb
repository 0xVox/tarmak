#!/bin/bash

case "$1" in
  apply)
    timer=0
    until [[ "`curl http://localhost:8080/healthz | grep ok | wc -l`" -gt 0 || timer -gt 30 ]]; do
      sleep 1
      ((timer++))
    done;
    kubectl apply -f $1
    ;;
  get)
    kubectl get -f $1
    ;;
  *)
    /usr/bin/echo "Usage: {set <file.yaml> |test <file.yaml>}"
esac
