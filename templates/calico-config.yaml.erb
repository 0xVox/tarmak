# This ConfigMap is used to configure a self-hosted Calico installation.
kind: ConfigMap
apiVersion: v1
metadata:
  name: calico-config 
  namespace: kube-system
data:
      # Configure this with the location of your etcd cluster.
  etcd_endpoints: "<%= scope['calico::etcd_endpoints'] %>"
  etcd_ca: "<%= scope['calico::etcd_ca_file'] %>"
  etcd_key: "<%= scope['calico::etcd_key_file'] %>"
  etcd_cert: "<%= scope['calico::etcd_cert_file'] %>"
