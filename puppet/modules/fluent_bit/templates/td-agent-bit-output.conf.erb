<% @types.each do |type| -%>
[OUTPUT]
<% if @elasticsearch -%>
    Name es
    Index fluent-bit
    Type flb_type
    Logstash_Format On
<% if @elasticsearch["awsESProxy"] -%>
    Host localhost
    Port <%= @elasticsearch["awsESProxy"]["port"] %>
<%- else -%>
    Host <%= @elasticsearch["host"] %>
    Port <%= @elasticsearch["port"] %>
<% if @elasticsearch["tls"] -%>
    tls On
<% if @elasticsearch["tlsVerify"] -%>
    tls.verify On
<%- else -%>
    tls.verify Off
<% end -%>
<% end -%>
<% end -%>
<%- else -%>
    Name null
<% end -%>
<% if @types.include? "all" -%>
    Match *
<% break -%>
<%- else -%>
    Match <%= type %>*
<% end -%>

<% end -%>