[Unit]
Description=node-exporter
After=network.target

[Service]
ExecStart=<%= @dest_dir %>/node_exporter \
  --collector.systemd \
  --web.listen-address=:<%= @port %> \
  --collector.filesystem.ignored-mount-points "<%= @ignored_mount_points %>"
Restart=on-failure

[Install]
WantedBy=multi-user.target
