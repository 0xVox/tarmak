modules:
  etcd_k8s_main_proxy:
    prober: proxy
    timeout: 5s
    proxy:
      valid_targets:
      - https://127.0.0.1:<%= @etcd_k8s_main_port %>/metrics
      tls_config:
        ca_file: /etc/etcd/ssl/etcd-k8s-ca.pem
        key_file: /etc/etcd/ssl/etcd-k8s-key.pem
        cert_file: /etc/etcd/ssl/etcd-k8s.pem
        insecure_skip_verify: true
  etcd_k8s_events_proxy:
    prober: proxy
    timeout: 5s
    proxy:
      valid_targets:
      - https://127.0.0.1:<%= @etcd_k8s_events_port %>/metrics
      tls_config:
        ca_file: /etc/etcd/ssl/etcd-k8s-ca.pem
        key_file: /etc/etcd/ssl/etcd-k8s-key.pem
        cert_file: /etc/etcd/ssl/etcd-k8s.pem
        insecure_skip_verify: true
  etcd_overlay_proxy:
    prober: proxy
    timeout: 5s
    proxy:
      valid_targets:
      - https://127.0.0.1:<%= @etcd_overlay_port %>/metrics
      tls_config:
        ca_file: /etc/etcd/ssl/etcd-overlay-ca.pem
        key_file: /etc/etcd/ssl/etcd-overlay-key.pem
        cert_file: /etc/etcd/ssl/etcd-overlay.pem
        insecure_skip_verify: true
